@model EventPlanner.Models.EventTask

@{
    ViewData["Title"] = "Добави нова задача";
}

<h1>Добави нова задача</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TaskDescription" class="control-label">Описание</label>
        <input asp-for="TaskDescription" class="form-control" />
        <span asp-validation-for="TaskDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaskStatus" class="control-label">Статус</label>
        <select asp-for="TaskStatus" class="form-control">
            <option value="Not Started">Не започната</option>
            <option value="In Progress">В процес</option>
            <option value="Completed">Завършена</option>
        </select>
        <span asp-validation-for="TaskStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventID" class="control-label">Събития</label>
        @Html.DropDownList("EventID", ViewData["Events"] as SelectList, "Изберете събитие", new { @class = "form-control" })
        <span asp-validation-for="EventID" class="text-danger"></span>
    </div>

    <div class="form-group" style="padding-top: 10px">
    <button type="submit" class="btn btn-primary">Добави</button>
    <a asp-action="Index" class="btn btn-secondary">Откажи</a>
    </div>
</form>
